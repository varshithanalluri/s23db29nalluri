extends layout

block content
  h1= title

  if (toShow == null)
    h2 No instance to delete
  else
    - let id = toShow._id
    - let item_name = toShow.item_name
    - let category = toShow.category
    - let quantity = toShow.quantity
    - let actionid = "/resource/item/" +id
  
    div
      div.row
        div(class='costumeAttr mr-3') item ID is:
          div #{id}
      div.row
        div(class='costumeAttr mr-3') item Name is:
          div #{item_name}
      div.row
        div(class='costumeAttr mr-3') item category is:
          div #{category}
      div.row
        div(class='costumeAttr mr-3') item quantity is:
          div #{quantity}
      
      button(class="btn btn-danger m-2", onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2", onclick="cancel()") Cancel

    script.
      function cancel() {
        window.location.href='/items'
      }

    script.
      let actionid = "#{actionid}"
      function deleteOnid() {
        console.log("starting delete")
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded")
          window.location.href='/items'
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error)
        });
      }